@model List<Doctor>

<h1>Doctores Especialidad</h1>

<form method="post">
    <label>Introduzca especialidad</label>
    <input type="text" name="especialidad" class="form-control" />
    <button class="btn btn-warning">
        Filtrar doctores
    </button>
</form>

<table class="table table-info">
    <thead>
        <tr>
            <th>Apellido</th>
            <th>Especialidad</th>
            <th>Salario</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Doctor doc in Model)
        {
            <tr>
                <td>@doc.Apellido</td>
                <td>@doc.Especialidad</td>
                <td>@doc.Salario</td>
            </tr>
        }
    </tbody>
</table>
